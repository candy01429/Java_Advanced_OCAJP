/*Step1 - 建立BMI Class*/
package com;

public class BMI{
  public double h;
  public double w;
  public double bmi;

  public double getBMI() {  
    if (bmi == 0){
      bmi = w / Math.pow(h/100,2);
    }
    return bmi;
  }
}

/*Step2 - 建立BMI 測試*/
package com;

public class TestBMI{
  public static void main(String[] args) {
    BMI b1 = new BMI();  // new 一個新的BMI物件
    b1.w = 60;
    b1.h = 170;
    System.out.printf("w=%.1f, h=%.1f, bmi=%.2f\n", b1.w, b1.h, b1.getBmi());
  }
}
